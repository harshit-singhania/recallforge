{
    "info": {
        "_postman_id": "recallforge-test-suite",
        "name": "RecallForge API Test Suite",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Register User",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 201\", function () {",
                            "    pm.response.to.have.status(201);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"{{current_username}}\",\n    \"password\": \"{{password}}\",\n    \"email\": \"{{current_email}}\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/auth/users/",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "auth",
                        "users",
                        ""
                    ]
                }
            },
            "response": []
        },
        {
            "name": "2. Login",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "var jsonData = pm.response.json();",
                            "pm.collectionVariables.set(\"access_token\", jsonData.access);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"username\": \"{{current_username}}\",\n    \"password\": \"{{password}}\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/auth/jwt/create/",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "auth",
                        "jwt",
                        "create",
                        ""
                    ]
                }
            },
            "response": []
        },
        {
            "name": "3. Create Deck",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 201\", function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "var jsonData = pm.response.json();",
                            "pm.collectionVariables.set(\"deck_id\", jsonData.id);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Postman Test Deck\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/api/v1/decks/",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "decks",
                        ""
                    ]
                }
            },
            "response": []
        },
        {
            "name": "4. Ingest Wiki (Web)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 201\", function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "var jsonData = pm.response.json();",
                            "pm.collectionVariables.set(\"source_id\", jsonData.id);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"deck\": {{deck_id}},\n    \"url\": \"https://en.wikipedia.org/wiki/Ribosome\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/api/v1/ingest/",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "ingest",
                        ""
                    ]
                }
            },
            "response": []
        },
        {
            "name": "5. Verify Processing (Get Source Status)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{access_token}}",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/v1/ingest/{{source_id}}/",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "v1",
                        "ingest",
                        "{{source_id}}",
                        ""
                    ]
                }
            },
            "response": []
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "if (!pm.collectionVariables.get(\"current_username\")) {",
                    "    var uniqueId = Date.now();",
                    "    pm.collectionVariables.set(\"current_username\", \"user_\" + uniqueId);",
                    "    pm.collectionVariables.set(\"current_email\", \"user_\" + uniqueId + \"@test.com\");",
                    "}"
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://127.0.0.1:8000"
        },
        {
            "key": "current_username",
            "value": ""
        },
        {
            "key": "current_email",
            "value": ""
        },
        {
            "key": "password",
            "value": "PostmanPass123!"
        },
        {
            "key": "access_token",
            "value": ""
        },
        {
            "key": "deck_id",
            "value": ""
        },
        {
            "key": "source_id",
            "value": ""
        }
    ]
}